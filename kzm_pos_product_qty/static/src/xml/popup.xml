<?xml version="1.0" encoding="UTF-8" ?>

<templates id="template" xml:space="preserve">

	<t t-name="ProductQtyPopupWidget">
        <div class="modal-dialog">
            <div class="popup popup-textinput">
                <p class="title">Product Quantity</p>
                <div>
                    <t t-esc="widget.prod_info"/>
                </div>
                <table style="width:100%;font-size: 16px;">
                    <tr class="warehouse_css">
                        <th style="font-weight:normal;text-align: left;padding-left: 15px;">Warehouse</th>
                        <th style="font-weight:normal;text-align: right;padding-right: 15px;">Quantity</th>
                    </tr>
                    <t t-raw="widget.prod_info_data"/>
                    <tr class="warehouse_css">
                        <th style="font-weight:normal;text-align: left;padding-left: 15px;">Total</th>
                        <td style="text-align: right;padding-right: 15px;">
                            <t t-esc="widget.total_qty"/>
                        </td>
                    </tr>
                </table>
                <div class="footer">
                    <div class="button cancel">
                        Close
                    </div>
                </div>
            </div>
        </div>
    </t>


</templates>